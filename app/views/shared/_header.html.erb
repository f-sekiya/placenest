<header class="header">
  <div class="header__inner">
    <div class="header__left">
      <%= link_to "PlaceNest", root_path, class: "header__logo" %>
    </div>

    <nav class="header__right">
      <% if user_signed_in? %>
        <span class="header__nickname"><%= current_user.nickname.presence || current_user.email %></span>

        <%= link_to "ログアウト",
                    destroy_user_session_path,
                    data: { turbo_method: :delete },
                    class: "header__link" %>
      <% else %>
        <%= link_to "新規登録", new_user_registration_path, class: "header__link" %>
        <%= link_to "ログイン", new_user_session_path, class: "header__link" %>
      <% end %>
    </nav>
  </div>
</header>
