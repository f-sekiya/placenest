<header class="header" role="banner">
  <div class="header__inner">
    <div class="header__left">
      <%= link_to "PlaceNest", root_path, class: "header__logo" %>
    </div>

    <div class="header__right">
      <button class="header__toggle" aria-controls="primary-navigation" aria-expanded="false" aria-label="メニューを開く">
        <span class="header__toggle-bar"></span>
        <span class="header__toggle-bar"></span>
        <span class="header__toggle-bar"></span>
      </button>

      <nav id="primary-navigation" class="header__nav" role="navigation" aria-label="メインナビゲーション">
        <ul class="header__nav-list">
          <% if user_signed_in? %>
            <li class="header__nav-item header__nickname">
              <%= current_user.nickname.presence || current_user.email %>
            </li>
            <li class="header__nav-item">
              <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete }, class: "header__link" %>
            </li>
          <% else %>
            <li class="header__nav-item">
              <%= link_to "新規登録", new_user_registration_path, class: "header__link" %>
            </li>
            <li class="header__nav-item">
              <%= link_to "ログイン", new_user_session_path, class: "header__link" %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
