<div class="user-edit">
  <h2>ユーザー情報の編集</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autocomplete: "email", class: 'form-control', placeholder: '例: user@example.com' %>
  </div>

  <div class="form-group">
    <%= f.label :nickname, 'ニックネーム' %><br />
    <%= f.text_field :nickname, autocomplete: "nickname", class: 'form-control', placeholder: '表示名を入力' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>確認待ちのメールアドレス: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, 'パスワード' %> <small>(変更しない場合は空のままにしてください)</small><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: '新しいパスワード（省略可）' %>
    <% if @minimum_password_length %>
      <br />
      <small><%= @minimum_password_length %> 文字以上</small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, 'パスワード（確認）' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: '確認用パスワード' %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, '現在のパスワード' %> <small>(変更を反映するために必要です)</small><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: 'form-control', placeholder: '現在のパスワードを入力' %>
  </div>

  <div class="actions">
    <%= f.submit '更新する', class: 'btn btn-primary' %>
  </div>
  <% end %>

  <div class="account-actions">
    <h3>アカウント削除</h3>
    <div>注意: <%= button_to 'アカウントを削除する', registration_path(resource_name), data: { confirm: '本当にアカウントを削除しますか？' }, method: :delete, class: 'btn btn-danger' %></div>
    <div style="margin-top:8px;"><%= link_to '戻る', 'javascript:history.back()', class: 'btn btn-link' %></div>
  </div>
</div>
