<div class="auth-page auth-signup">
  <div class="auth-card">
    <h2 class="auth-title">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'auth-form' }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="auth-field">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'auth-input' %>
      </div>

      <div class="auth-field">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, autocomplete: "nickname", class: 'auth-input' %>
      </div>

      <div class="auth-field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em class="auth-hint">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'auth-input' %>
      </div>

      <div class="auth-field">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'auth-input' %>
      </div>

      <div class="auth-actions">
        <%= f.submit "Sign up", class: 'auth-button' %>
      </div>
    <% end %>

    <div class="auth-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
